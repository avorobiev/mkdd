<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="max_dac.annotations_cache_warmer.class">Maxposter\DacBundle\CacheWarmer\AnnotationsCacheWarmer</parameter>
        <parameter key="max_dac.annotation_driver.class">Maxposter\DacBundle\Mapping\Driver\Annotations</parameter>
        <parameter key="max_dac.annotations.class">Maxposter\DacBundle\Mapping\Service\Annotations</parameter>
    </parameters>

    <services>
        <service id="max_dac.annotations_cache_warmer" class="%max_dac.annotations_cache_warmer.class%" public="false">
            <tag name="kernel.cache_warmer" />
            <argument type="service" id="max_dac.annotations" />
        </service>

        <service id="max_dac.annotation_driver" class="%max_dac.annotation_driver.class%" public="false">
            <argument type="service" id="annotation_reader" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
        <service id="max_dac.annotations" class="%max_dac.annotations.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="max_dac.annotation_driver" />
            <argument>%kernel.cache_dir%</argument>
        </service>
    </services>
</container>
